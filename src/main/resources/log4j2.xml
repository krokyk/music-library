<Configuration
    status="debug"
    name="MusicLibrary"
    packages="org.kroky"
    monitorInterval="30">
    <Properties>
        <Property name="filename">musiclib</Property>
        <Property name="logdir">./logs</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}:%method() - %msg%n"/>
        </Console>
        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}:%method() - %msg%n"/>
        </Console>
        <RollingFile name="Rolling" fileName="${sys:logdir}/${filename}.log"
                     filePattern="${filename}-${sd:type}.%i.log.gz">
            <PatternLayout>
                <!-- <pattern>%d %p %c{1.} [%t] %m%n</pattern> -->
                <pattern>[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}.%method() - %msg%n</pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="3 MB" />
        </RollingFile>

        <JTextArea name="JTextArea">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}:%method() - %msg%n"/>
        </JTextArea>
    </Appenders>
    <Loggers>
        <Logger name="org.hibernate.type" level="trace"/>
        <Logger name="org.hibernate.type.descriptor.sql.BasicExtractor" level="off"/>
        <Root level="trace">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="Rolling"/>
            <AppenderRef ref="JTextArea"/>
        </Root>
    </Loggers>
</Configuration>